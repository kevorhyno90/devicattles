rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write for authenticated users to their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for shared resources (optional)
    match /shared/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Farm data collections - allow authenticated users
    match /{collection}/{document=**} {
      allow read, write: if request.auth != null &&
        collection in [
          'animals', 'crops', 'tasks', 'finance', 'inventory', 'equipment',
          'treatments', 'breeding', 'feeding', 'diets', 'rations', 'milkYield',
          'measurements', 'flocks', 'poultry', 'egg_production', 'poultry_vaccination',
          'poultry_health', 'poultry_treatment', 'calfManagement', 'calfFeeding',
          'calfHealth', 'goats', 'kids', 'groups', 'pastures', 'notifications',
          'alert_rules', 'activities', 'photos', 'notes', 'transactions',
          'calf:management', 'calf:feeding', 'calf:health'
        ];
    }
  }
}
